package inputs;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class KeyboardInputs implements KeyListener {

	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void keyReleased(KeyEvent e) {

	}

	@Override
	public void keyPressed(KeyEvent e) {
		// nghe key từ phím
		switch (e.getKeyCode()) {
		case KeyEvent.VK_W:
			System.out.println("it is key w");
			break;
		case KeyEvent.VK_A:
			System.out.println("it is key a");
			break;
		case KeyEvent.VK_S:
			System.out.println("it is key s");
			break;
		case KeyEvent.VK_D:
			System.out.println("it is key d");
			break;

		}
	}
}
